generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "linux-musl-openssl-3.0.x"]
  output = "../generated/device-service"

}


datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Type {
  LIGHT
  SENSOR
  NETWORK
  SECURITY
}

enum Status {
  ONLINE
  OFLINE
}

enum Room {
  LIVINGROOM
  BEDROOM
  BATHROOM
  KITCHEN
}

model Device{
  id       Int    @id @default(autoincrement())
  userId   Int 
  name     String @unique
  maxConsumption Int 

  room Room
  status Status @default(ONLINE)
  type Type 

  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
}